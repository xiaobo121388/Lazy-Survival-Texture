{
	"namespace": "chat",
	"chat_screen_content": {
		"modifications": [
			{
				"array_name": "controls",
				"operation": "insert_back",
				"value": {
					"chat_xb_panel@chat.chat_xb_panel": {}
				}
			}
		]
	},
	"chat_screen@common.base_screen": {
		"close_on_player_hurt": false
	},
	"chat_xb_image": {
		"type": "image",
		"size": [
			15,
			15
		],
		"texture": "textures/ui/tab_icon"
	},
	"tab_icon@chat_xb_image": {
		"texture": "textures/ui/tab_icon"
	},
	"shift_tab_icon@chat_xb_image": {
		"texture": "textures/ui/shift_tab_icon"
	},
	"up_icon@chat_xb_image": {
		"texture": "textures/ui/up_icon"
	},
	"down_icon@chat_xb_image": {
		"texture": "textures/ui/down_icon"
	},
	"chat_xb_button@common_buttons.light_glyph_button": {
		"size": [
			24,
			24
		],
		"anchor_from": "bottom_right",
		"anchor_to": "bottom_right"
	},
	"tab@chat_xb_button": {
		"$button_content": "chat.tab_icon",
		"$pressed_button_name": "button.chat_autocomplete"
	},
	"shift_tab@chat_xb_button": {
		"$button_content": "chat.shift_tab_icon",
		"$pressed_button_name": "button.chat_autocomplete_back"
	},
	"up@chat_xb_button": {
		"$button_content": "chat.up_icon",
		"$pressed_button_name": "button.chat_previous_message"
	},
	"down@chat_xb_button": {
		"$button_content": "chat.down_icon",
		"$pressed_button_name": "button.chat_next_message"
	},
	"chat_xb_panel": {
		"type": "panel",
		"anchor_from": "bottom_left",
		"anchor_to": "bottom_left",
		"offset": [
			-40,
			-80
		],
		"controls": [
			{
				"tab@tab": {
					"offset": [
						-12,
						12
					]
				}
			},
			{
				"shift_tab@shift_tab": {
					"offset": [
						-12,
						-12
					]
				}
			},
			{
				"up@up": {
					"offset": [
						12,
						-12
					]
				}
			},
			{
				"down@down": {
					"offset": [
						12,
						12
					]
				}
			}
		]
	},
	"chat_cmd_xb_panel": {
		"type": "panel",
		"anchor_from": "bottom_left",
		"anchor_to": "bottom_left",
		"layer": 18,
		"offset": [
			-40,
			-80
		],
		"controls": [
			{
				"tab@tab": {
					"offset": [
						0,
						12
					]
				}
			},
			{
				"shift_tab@shift_tab": {
					"offset": [
						0,
						-12
					]
				}
			}
		],
		"bindings": [
			{
				"binding_name": "#maximized_input_visible",
				"binding_name_override": "#visible"
			}
		]
	}
}