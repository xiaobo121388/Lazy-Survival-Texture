{
  "pocket_refresh_image": {
    "type": "image",
    "size": [
      35,
      33
    ],
    "offset": [
      1,
      0
    ],
    "texture": "textures/ui/TabLeftBackTopMost",
    "controls": [
      {
        "test_button@common.button": {
          "size": [
            25,
            25
          ],
          "offset": [
            0,
            0
          ],
          "anchor_from": "center",
          "anchor_to": "center",
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "#xiaobo_trade_refresh",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "$pressed_button_name",
              "mapping_type": "focused"
            }
          ],
          "controls": [
            {
              "default@trade2_pocket.refresh_icon": {}
            },
            {
              // 悬停状态
              "hover@trade2_pocket.refresh_icon_hover": {
                "$icon_alpha": 0.8
              }
            },
            {
              // 按下状态
              "pressed@trade2_pocket.refresh_icon_pressed": {}
            }
          ]
        }
      }
    ]
  },
  /*//// Custom Left Tabs ////*/
  "enchant_icon": {
    "type": "custom",
    "renderer": "enchanting_book_renderer"
    // "bindings": [
    //   {
    //     "binding_type": "view",
    //     "source_control_name": "enchanted_tab_toggle",
    //     "source_property_name": "#toggle_state",
    //     "target_property_name": "#open"
    //   }
    // ]
  },
  "custom_left_tab@common_tabs.pocket_tab_left": {
    "$toggle_name": "left_tab",
    "$radio_toggle_group": true
  },
  "left_tab_enchanted@custom_left_tab": {
    "$toggle_group_forced_index": 2,
    "$tab_view_binding_name": "enchanted_tab_toggle",
    "$toggle_state_binding_name": "#is_left_tab_enchanted",
    "$toggle_binding_type": "global",
    "$tab_content": "trade2_pocket.enchant_icon"
  },
  "c_left_tab_trade@custom_left_tab": {
    "$toggle_default_state": true,
    "$tab_view_binding_name": "trade_tab_toggle",
    "$toggle_group_forced_index": 0,
    "$toggle_name": "left_tab",
    "$tab_content": "trade2_pocket.trade_icon"
  },
  "c_left_tab_inventory@custom_left_tab": {
    "$tab_view_binding_name": "inventory_left_tab_toggle",
    "$toggle_group_forced_index": 1,
    "$toggle_name": "left_tab",
    "$tab_content": "trade2_pocket.chest_item_renderer"
  },
